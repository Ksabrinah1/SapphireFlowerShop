@model Flower

<div class="card" style="width: 18rem;">
    @if (Model.Id ==1)
    {
        <img src="/Images/rae-galatas-EVvzhwW2M9k-unsplash.jpg" class="card-img-top" width="100" height="250">
    }
    @if (Model.Id == 2)
    {
    <img src="/Images/minh-tri-aBtixv9kOm4-unsplash.jpg" class="card-img-top" width="100" height="250">
    }
    @if (Model.Id == 3)
    {
    <img src="/Images/neha-kumar-1Bk9ufEkS2A-unsplash.jpg" class="card-img-top" width="100" height="250">
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description. Available in @Model.Color  $@Model.Price</p>
        <a class="btn btn-primary" asp-action="Index" asp-route-id = "@Model"> Back to list</a> 
    </div>
</div>
